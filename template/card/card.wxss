.card_item{
  width: 90%;
  margin: 0 auto;
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  box-shadow:0px 5px 20px -5px #DDD;
  font-size: 25rpx;
  color: #999;
}
.content_box text{
  display: block;
  margin-bottom: 20rpx;
  line-height: 40rpx;
}
.content_box image{
  display: block;
  width: 100%;
  height: 350rpx;
}
.name_box{
  margin-top: 10rpx;
  text-align: right;
  color: #ddd;
  font-size: 23rpx;
}