/* pages/add/add.wxss */
.my-textarea{
  width: 100%;
  font-size: 27rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}
#words-limit{
  position: absolute;
  bottom: 0;
  right: 30rpx;
  /* color: #999; */
}
.add-image{
  margin-left: 30rpx;
  margin-top: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
}
.show-image{  
  position: relative;
}
.show-image image{
  margin: 30rpx auto;
  display: block;
}
.show-image .delete-image{
  position: absolute;
  right: 0;
  top: 0;
  background: rgba(0, 0, 0, .3);
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.submit-msg{
  font-size: 30rpx;
  text-align: right;
  padding-right: 30rpx;
  background: #ffdada;
}
.submit-msg button{
  border: none;
  font-size: 30rpx;
  display: inline-block;
  width: 100rpx;
  padding: 0;
  line-height: 50rpx;
  background: none !important;
}
.submit-msg button::after{
  border: none;
}

.head_bar{
  background: #ffdada;
  height: 80rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  font-size: 30rpx;
  padding-top: 90rpx;
  padding-bottom: 50rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  box-sizing: border-box;
}
.submit-msg{
  margin-top: 130rpx;
}