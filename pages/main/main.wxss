/* pages/main/main.wxss */
/* 使用组件时需要引入组件样式文件 */
@import "../components/post/post.wxss";

.head_bar{
  margin-bottom: 40rpx;
  padding: 0 30rpx 10rpx 30rpx;
  font-size: 25rpx;
  background: #ffdada;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.to-timer{
  position: fixed;
  right: 0;
  top: 80%;
  width: 70rpx;
  height: 70rpx;
  background: rgb(255, 106, 106);
  opacity: .7;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}