/* pages/main/subPages/detail/detail.wxss */
.detail_view{
  background:linear-gradient(135deg, #FFFFFF 0%, #EEEEEE 100%);
  height: 100%;
}
.head_image {
  background: linear-gradient(135deg, #FFFFFF 0%, #DDDDDD 100%);
  width: 100%;
  height: 250px;
  top: 0;
  left: 0;
  position: relative;
}
.head_img{
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}
.card_part{
  width: 90%;
  margin: 0 auto;
  position: relative;
  background: #FFFFFF;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-top: -80rpx;
}
.card_time text{
  display: block;
  width: 100%;
  text-align: center;
}
.time_day{
  font-size: 80rpx;
}
.time_small{
  color: #999;
  margin-bottom: 50rpx;
}
.card_content{
  color: #333;
}
.card_from{
  text-align: right;
  color: #999;
}
.detail_back{
  position: absolute;
  width: 90rpx;
  height: 70rpx;
  top: 60rpx;
  left: 30rpx;
}
.detail_back image{
  width: 100%;
  height: 100%;
}